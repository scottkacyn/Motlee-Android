package com.motlee.android.object;

import java.util.ArrayList;

public class StreamListHandler {
	
	private static ArrayList<EventDetail> mStreamList = new ArrayList<EventDetail>();
	
	private static boolean hasBeenUpdated = false;
	
	public static boolean getStreamList(ArrayList<EventDetail> streamList)
	{
		if (hasBeenUpdated)
		{
			streamList = mStreamList;
			return true;
		}
		else
		{
			return false;
		}
	}
	
	public static ArrayList<EventDetail> getCurrentStreamList()
	{
		return mStreamList;
	}
	
	public static void updateStreamList(ArrayList<EventDetail> streamList)
	{
		hasBeenUpdated = true;
		mStreamList = streamList;
	}

}
