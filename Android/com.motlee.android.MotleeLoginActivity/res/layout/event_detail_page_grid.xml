<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_detail_gridview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="horizontal" >
    
    <View
        android:layout_height="1dp"
 		android:layout_width="0dp"
 		android:layout_weight=".07" 
 		android:background="@android:color/transparent" />
      
    <FrameLayout 
        android:layout_width="0dp"
        android:layout_weight=".96"
        android:layout_height="wrap_content">
        
	    <ImageButton
	        android:id="@+id/grid_image_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:padding="3dp"
	        android:background="@android:color/transparent"
	        android:onClick="showPictureDetail" />
	    
	    <ImageView
            android:id="@+id/grid_image_bg_1"
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
    		android:adjustViewBounds="true"
    		android:padding="1dp"
    		android:src="@drawable/image_thumbnail_background" 
    		android:background="@android:color/transparent"/>
	    
	    <ProgressBar 
	        android:layout_width="80dp"
	        android:layout_height="20dp"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        android:progress="0"
	        android:id="@+id/grid_spinner_1"
	        android:indeterminate="false"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:visibility="gone"/>
   	    
   	    <FrameLayout
	        android:id="@+id/grid_final_1"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:visibility="gone">
	        
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:scaleType="fitCenter"
	            android:adjustViewBounds="true"
	            android:src="@drawable/ic_menu_upload"
	            android:layout_gravity="center"
	            android:background="@android:color/transparent" />
	        
	        <ProgressBar 
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_gravity="center"/>

	    </FrameLayout>
	    
	    <ImageButton 
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_gravity="center"
	        android:id="@+id/grid_retry_1"
	        android:visibility="gone"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:src="@drawable/ic_menu_refresh"
	        android:onClick="retryPhotoUpload"
			android:background="@android:color/transparent"/>
	    
	</FrameLayout>
    
    <FrameLayout 
        android:layout_width="0dp"
        android:layout_weight=".96"
        android:layout_height="wrap_content">
        
	    <ImageButton
	        android:id="@+id/grid_image_2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:padding="3dp"
	        android:background="@android:color/transparent"
	        android:onClick="showPictureDetail" />
	    
	    <ImageView
            android:id="@+id/grid_image_bg_2"
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
    		android:adjustViewBounds="true"
    		android:padding="1dp"
    		android:src="@drawable/image_thumbnail_background" 
    		android:background="@android:color/transparent"/>
	    
	    <ProgressBar 
	        android:layout_width="80dp"
	        android:layout_height="20dp"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        android:progress="0"
	        android:id="@+id/grid_spinner_2"
	        android:indeterminate="false"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:visibility="gone"/>
	    
   	    <FrameLayout
	        android:id="@+id/grid_final_2"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:visibility="gone">
	        
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:scaleType="fitCenter"
	            android:adjustViewBounds="true"
	            android:src="@drawable/ic_menu_upload"
	            android:layout_gravity="center"
	            android:background="@android:color/transparent" />
	        
	        <ProgressBar 
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_gravity="center"/>

	    </FrameLayout>
	    
       	<ImageButton 
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_gravity="center"
	        android:id="@+id/grid_retry_2"
	        android:visibility="gone"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:src="@drawable/ic_menu_refresh"
	        android:onClick="retryPhotoUpload"
	        android:background="@android:color/transparent" />
	    
	</FrameLayout>
    
    <FrameLayout 
        android:layout_width="0dp"
        android:layout_weight=".96"
        android:layout_height="wrap_content">
        
	    <ImageButton
	        android:id="@+id/grid_image_3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:padding="3dp"
	        android:background="@android:color/transparent"
	        android:onClick="showPictureDetail" />
	    
	    <ImageView
            android:id="@+id/grid_image_bg_3"
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
    		android:adjustViewBounds="true"
    		android:padding="1dp"
    		android:src="@drawable/image_thumbnail_background" 
    		android:background="@android:color/transparent"/>
	    
	    <ProgressBar 
	        android:layout_width="80dp"
	        android:layout_height="20dp"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        android:progress="0"
	        android:id="@+id/grid_spinner_3"
	        android:indeterminate="false"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:visibility="gone"/>
	    
   	    <FrameLayout
	        android:id="@+id/grid_final_3"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:visibility="gone">
	        
	        <ImageView
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:scaleType="fitCenter"
	            android:adjustViewBounds="true"
	            android:src="@drawable/ic_menu_upload"
	            android:layout_gravity="center"
	            android:background="@android:color/transparent" />
	        
	        <ProgressBar 
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_gravity="center"/>

	    </FrameLayout>
	    
    	<ImageButton 
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_gravity="center"
	        android:id="@+id/grid_retry_3"
	        android:visibility="gone"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"
	        android:src="@drawable/ic_menu_refresh"
	        android:onClick="retryPhotoUpload"
	        android:background="@android:color/transparent" />
	    
	</FrameLayout>
	
    <View
        android:layout_height="1dp"
 		android:layout_width="0dp"
 		android:layout_weight=".07" 
 		android:background="@android:color/transparent" />
    
</LinearLayout>