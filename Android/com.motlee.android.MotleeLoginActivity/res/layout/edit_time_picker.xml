<com.motlee.android.layouts.HorizontalRatioLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/label_button_no_arrow"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	    <com.motlee.android.view.HorizontalAspectImageButton
	        android:id="@+id/edit_event_date_time_button"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="openDateTimePicker"
	        android:src="@drawable/label_button_no_arrow"
	        android:background="@android:color/transparent"
	        />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:weightSum="1">
	        <ImageView
	            android:id="@+id/edit_event_date_icon"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:paddingLeft="10dp"
	            android:layout_weight=".20"
	            android:src="@drawable/icon_time_normal" />
	        
	        <TextView 
	            android:id="@+id/edit_event_date_time_label"
	            android:layout_height="match_parent"
	            android:layout_width="0dp"
	            android:gravity="left|center_vertical"
		        android:paddingLeft="5dp"
		        android:layout_weight=".20"/>
	        
		    <TextView
		        android:id="@+id/edit_event_date_time_text"
		        android:layout_height="match_parent"
		        android:layout_width="0dp"
		        android:gravity="left|center_vertical"
		        android:paddingLeft="5dp"
		        android:layout_weight=".60"/>
	    </LinearLayout>
	     <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:adjustViewBounds="true"
	        android:layout_gravity="bottom"
	        android:src="@drawable/label_button_divider"/>
    </FrameLayout>
    
   
    
</com.motlee.android.layouts.HorizontalRatioLinearLayout>