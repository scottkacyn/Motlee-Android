<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
	    <rotate 
	        android:fromDegrees="-90"
	        android:toDegrees="-90"
	        android:pivotX="50%"
	        android:pivotY="50%"
	        android:drawable="@drawable/button_orange_pressed">
		</rotate>
	</item>
 	<item>
 	    <rotate 
	        android:fromDegrees="-90"
	        android:toDegrees="-90"
	        android:pivotX="50%"
	        android:pivotY="50%"
	        android:drawable="@drawable/button_orange_normal" >
		</rotate>
	</item>
</selector>